# 应用基础配置
APP_NAME=MediaSymphony
API_V1_STR=/api/v1
DEBUG=true
APP_PORT=8000

# 文件存储路径配置
DATA_DIR=../data
UPLOAD_DIR=${DATA_DIR}/uploads
PROCESSED_DIR=${DATA_DIR}/processed

# 音频处理配置
MAX_AUDIO_SIZE=104857600
ALLOWED_AUDIO_TYPES=audio/wav,audio/mp3,audio/ogg

# 视频处理配置
MAX_VIDEO_SIZE=524288000
ALLOWED_VIDEO_TYPES=video/mp4,video/avi,video/mov

# 子任务超时配置（秒）
SCENE_DETECTION_TIMEOUT=1800
AUDIO_SEPARATION_TIMEOUT=1800
AUDIO_TRANSCRIPTION_TIMEOUT=1800

# MySQL配置
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=media_symphony
MYSQL_USER=your_mysql_user
MYSQL_PASSWORD=your_mysql_password
MYSQL_ROOT_PASSWORD=your_root_password

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# 火山引擎AK/SK配置
VOLC_AK="your_volc_ak"
VOLC_SK="your_volc_sk"

# TOS云存储配置
TOS_REGION=cn-guangzhou
TOS_ENDPOINT=tos-cn-guangzhou.volces.com
TOS_BUCKET=your_tos_bucket
TOS_BUCKET_HOST_PUB=tos-cn-guangzhou.volces.com
TOS_BUCKET_HOST_PRI=tos-cn-guangzhou.ivolces.com
TOS_SCHEME=https://