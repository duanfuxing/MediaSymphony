# 应用基础配置
APP_NAME=MediaSymphony
API_V1_STR=/api/v1
DEBUG=true
APP_PORT=8000

# 文件存储路径配置
DATA_DIR=../data
UPLOAD_DIR=${DATA_DIR}/uploads
PROCESSED_DIR=${DATA_DIR}/processed

# 音频处理配置
MAX_AUDIO_SIZE=104857600
ALLOWED_AUDIO_TYPES=["audio/wav","audio/mp3","audio/ogg"]

# 视频处理配置
MAX_VIDEO_SIZE=524288000
ALLOWED_VIDEO_TYPES=["video/mp4","video/avi","video/mov"]

# 子任务API服务端口配置
SCENE_DETECTION_API_PORT=5000
AUDIO_SEPARATION_API_PORT=5001
AUDIO_TRANSCRIPTION_API_PORT=5002

# 子任务超时配置（秒）
SCENE_DETECTION_TIMEOUT=1800
AUDIO_SEPARATION_TIMEOUT=1800
AUDIO_TRANSCRIPTION_TIMEOUT=1800

# MySQL配置
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=media_symphony
MYSQL_USER=media_symphony
MYSQL_PASSWORD=123456
MYSQL_ROOT_PASSWORD=123456

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=123456

# 火山引擎AK/SK配置
VOLC_AK=
VOLC_SK=

# TOS云存储配置
TOS_REGION=
TOS_ENDPOINT=
TOS_BUCKET=
TOS_BUCKET_HOST_PUB=
TOS_BUCKET_HOST_PRI=
TOS_SCHEME=

# 日志配置
LOG_LEVEL=INFO
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"
LOG_DIR=log
LOG_FILE_PREFIX=app
LOG_FILE_MAX_BYTES=10485760
LOG_FILE_BACKUP_COUNT=5