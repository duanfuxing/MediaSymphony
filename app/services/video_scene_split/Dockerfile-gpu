FROM nvidia/cuda:12.3.0-devel-ubuntu22.04

# 安装系统依赖和FFmpeg with CUDA支持
RUN apt-get update && apt-get install -y --no-install-recommends \
    python3-pip \
    python3-dev \
    software-properties-common \
    vim \
    && add-apt-repository ppa:savoury1/ffmpeg5 \
    && apt-get update && apt-get install -y --no-install-recommends \
    ffmpeg \
    libavcodec-dev \
    libavformat-dev \
    libavutil-dev \
    libswscale-dev \
    nvidia-cuda-toolkit \
    && rm -rf /var/lib/apt/lists/*

# 设置工作目录
WORKDIR /app

# 安装Python依赖
RUN pip3 install --no-cache-dir ffmpeg-python \
    opencv-python \
    numpy \
    flask \
    gunicorn \
    tensorflow \
    pillow \
    tqdm \
    moviepy

# 设置环境变量
ENV NVIDIA_VISIBLE_DEVICES all
# 添加video编解码能力
ENV NVIDIA_DRIVER_CAPABILITIES compute,video,utility,graphics

# 验证FFmpeg的GPU支持
RUN ffmpeg -version && ffmpeg -hwaccels

# 暴露API端口
EXPOSE 5000

# 启动命令
CMD ["python3", "/app/server/api_server.py"]
