RUN apt-get update && \
    apt-get install -y --no-install-recommends \
    python3-pip \
    python3-dev \
    software-properties-common \
    vim \
    && add-apt-repository ppa:savoury1/ffmpeg5 || true \
    && apt-get update && \
    apt-get install -y --no-install-recommends \
    ffmpeg \
    libavcodec-dev \
    libavformat-dev \
    libavutil-dev \
    libswscale-dev \
    nvidia-cuda-toolkit \
    && rm -rf /var/lib/apt/lists/*
