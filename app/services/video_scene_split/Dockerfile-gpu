FROM tensorflow/tensorflow:devel-gpu-py3

RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    pkg-config \
    rsync \
    unzip \
    zip \
    zlib1g-dev \
    wget \
    git \
    ffmpeg \
    libsm6 \
    libxext6 \
    libxrender1 \
    libfontconfig1 \
    vim \
    && rm -rf /var/lib/apt/lists/*

RUN pip3 --no-cache-dir install \
    Pillow \
    h5py \
    keras_applications \
    keras_preprocessing \
    matplotlib \
    mock \
    numpy \
    scipy \
    sklearn \
    pandas \
    tensorflow-gpu \
    tqdm \
    ffmpeg-python \
    pyyaml \
    opencv-python \
    opencv-contrib-python \
    shapely

# 暴露API端口
EXPOSE 5000

# 启动命令
CMD ["python3", "/app/server/api_server.py"]
